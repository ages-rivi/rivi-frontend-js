{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@api/*": ["old_src/pages/api/*"],
      "@pages/*": ["old_src/pages/*"],
      "@utils/*": ["old_src/utils/*"],
      "@components/*": ["old_src/components/*"],
      "@themes/*": ["old_src/themes/*"],
      "@interfaces/*": ["old_src/interfaces/*"],
      "@contexts/*": ["old_src/contexts/*"],
      "@hooks/*": ["old_src/hooks/*"],
      "@assets/*": ["old_src/assets/*"],
      "@services/*": ["old_src/services/*"],
      "@functions/*": ["old_src/functions/*"],
      "@lib/*": ["old_src/lib/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
